{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ipNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "IP address name prefix"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "PROD",
                "QA",
                "TEST",
                "DEV"
            ],
            "metadata": {
                "description": "Environment in which IP address will be used"
            }
        },
        "secondaryResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of secondary Resource Group"
            }
        }
    },
    "variables": {
        "myLocation": "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(parameters('ipNamePrefix'),'-',parameters('environment'))]",
            "apiVersion": "2016-03-30",
            "location": "[variables('myLocation')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[concat('mystorage', uniqueString(resourceGroup().Id))]",
            "apiVersion": "2018-07-01",
            "location": "[variables('myLocation')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2019-04-01",
            "name": "[concat('mystorage', uniqueString(resourceGroup().Id), '/default/mycontainer')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat('mystorage', uniqueString(resourceGroup().Id)))]"
            ],
            "properties": {
                "publicAccess": "Container"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "nestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('secondaryResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Network/publicIPAddresses",
                            "name": "[concat(parameters('ipNamePrefix'),'-secondary-',parameters('environment'))]",
                            "apiVersion": "2016-03-30",
                            "location": "[variables('myLocation')]",
                            "properties": {
                                "publicIPAllocationMethod": "Dynamic"
                            }
                        }
                    ]
                },
                "parameters": {}
            }
        }
    ],
    "outputs": {}
}